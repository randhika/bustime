<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.yene.example.bustiming"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    
   	<uses-permission android:name="android.permission.INTERNET"></uses-permission>
   	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
   	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES"/>
    <uses-feature    android:glEsVersion="0x00020000"   android:required="true"/>
	
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.yene.bustiming.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
        	android:name="com.yene.bustiming.Direction"
        	android:label="@string/select_direction"
        	android:parentActivityName="com.yene.bustiming.MainActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.yene.bustiming.Direction" />
    	</activity>
    	 <activity
        	android:name="com.yene.bustiming.NearbyStop"
        	android:label="@string/select_direction"
        	android:parentActivityName="com.yene.bustiming.MainActivity" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.yene.bustiming.NearbyStop" />
    	</activity>
    	<activity
        	android:name="com.yene.bustiming.BusStopList"
        	android:label="@string/select_bus_stop"
        	android:parentActivityName="com.yene.bustiming.Direction" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.yene.bustiming.BusStopList" />
    	</activity>
    	<activity
        	android:name="com.yene.bustiming.BusStop"
        	android:label="@string/select_bus_name"
        	android:parentActivityName="com.yene.bustiming.BusStopList" >
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value="com.yene.bustiming.BusStop" />
    	</activity>
        
    </application>

</manifest>