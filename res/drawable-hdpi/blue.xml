<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#356AA0" />
            <stroke
                android:width="1dp"
                android:color="#356AA0"/>
            <corners
                android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient
                android:startColor="#336699"
                android:endColor="#356AA0"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="#356AA0" />
            <corners
                android:radius="1dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>